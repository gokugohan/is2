                                    <asp:RoleGroup Roles="Administrator">
                                        <ContentTemplate>
                                            <asp:HyperLink ID="HyperLink1" runat="server">Switch to home page</asp:HyperLink>
                                        </ContentTemplate>
                                    </asp:RoleGroup>
                                </RoleGroups>
                            </asp:LoginView>
