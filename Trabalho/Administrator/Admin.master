                    <div class="row">
                        <div class="col-md-12">
                            <asp:ContentPlaceHolder ID="MainContentPlaceHolder" runat="server">
                            </asp:ContentPlaceHolder>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        
        
        <script>
            $(document).ready(function () {
                
                $("#menu-toggle").click(function (e) {
                    e.preventDefault();
                    console.log("menu-toggle is clicked");
                    $("#wrapper").toggleClass("toggled");
                });
            });
            
        </script>

